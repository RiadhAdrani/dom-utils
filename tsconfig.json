{
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "./jest.config.js",
    "./**.config.js",
    "./**.config.jsx",
    "out"
  ],
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "rootDir": ".",
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
