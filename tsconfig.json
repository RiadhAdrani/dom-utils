{
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "./jest.config.js",
    "./**.config.js",
    "./**.config.jsx",
    "out",
    "vitest.config.js"
  ],
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["es6", "dom"],
    "module": "ES2020",
    "rootDir": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "jsx": "preserve"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
