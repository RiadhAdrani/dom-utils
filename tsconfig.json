{
  "exclude": ["node_modules", "src/**/*.test.ts", "./**.config.js", "./**.config.jsx", "out"],
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom"],
    "module": "ES2015",
    "rootDir": ".",
    "resolveJsonModule": false,
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
