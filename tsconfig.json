{
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "./jest.config.js",
    "./**.config.js",
    "./**.config.jsx",
    "out",
    "vitest.config.js"
  ],
  "compilerOptions": {
    "target": "ES2016",
    "lib": [
      "es6",
      "dom"
    ],
    "module": "esnext",
    "rootDir": ".",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
